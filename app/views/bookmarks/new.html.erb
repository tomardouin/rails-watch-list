<div class='container p-5'>
    <h1> Add a bookmark </h1>
    <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.input :comment %>
        <%= f.association :movie, include_blank: false %>
        <%= f.submit "Add a Bookmark", class:"btn btn-primary rounded shadow me-3" %> | <%= link_to "Return to list", lists_path(@lists), class: "btn btn-primary rounded shadow ms-3" %>
    <% end %>
</div>